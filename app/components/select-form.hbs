{{#if @useModifer}}
  <label
    for="smp-generic-rfp-l1-service"
  >
    Category (DID-INSERT)
  </label>
  <select
    id="smp-generic-rfp-l1-service"
    autocomplete="off"
    {{did-insert this.updateSelectedCategoryForInit}}
    {{on "change" this.onSelectedCategoryChange}}
  >
    <option
      value=""
      disabled
      selected={{if (is-empty this.selectedCategory.id) true false}}
    >
      Default Placeholder
    </option>
    {{#each @categories as |category|}}
      <option
        value={{category.id}}
        selected={{eq category.id this.selectedCategory.id}}
      >
        {{category.name}}
      </option>
    {{/each}}
  </select>
{{else}}
  <label
    for="smp-generic-rfp-l1-service-other"
  >
    Category
  </label>
  <select
    id="smp-generic-rfp-l1-service-other"
    autocomplete="off"
    {{on "change" this.onSelectedCategoryChange}}
  >
    <option
      value=""
      disabled
      selected={{if (is-empty this.selectedCategory.id) true false}}
    >
      Default Placeholder
    </option>
    {{#each @categories as |category|}}
      <option
        value={{category.id}}
        selected={{eq category.id this.selectedCategory.id}}
      >
        {{category.name}}
      </option>
    {{/each}}
  </select>
{{/if}}
